<!--    </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tw_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Nhập thông tin sinh viên"
            android:textColor="#800000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="10dp"
            android:text="Thêm"
            android:textColor="@color/white"
            android:background="@drawable/sharpbutton"/>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white"
            android:text="Sửa"
            android:background="@drawable/sharpbutton"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="text"
            android:background="@drawable/textinput"
            android:drawablePadding="4dp"
            android:elevation="6dp"
            android:paddingStart="8dp"
            android:layout_marginBottom="10dp"
            android:hint="Họ và tên"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/edt_namSinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/textinput"
            android:drawablePadding="4dp"
            android:elevation="6dp"
            android:hint="Ngày tháng năm sinh"
            android:inputType="text"
            android:paddingStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:weightSum="4">


        <EditText
            android:id="@+id/edt_lopHoc"
            android:hint="Lớp học"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/textinput"
            android:drawablePadding="4dp"
            android:elevation="6dp"
            android:paddingStart="8dp"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:weightSum="4">


        <EditText
            android:id="@+id/edt_quequan"
            android:hint="Quê quán"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textinput"
            android:drawablePadding="4dp"
            android:elevation="6dp"
            android:paddingStart="8dp"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:weightSum="4">


        <EditText
            android:id="@+id/edt_masv"
            android:hint="Mã sinh viên"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textinput"
            android:drawablePadding="4dp"
            android:elevation="6dp"
            android:paddingStart="8dp"
            android:layout_weight="3" />
    </LinearLayout>

    <TextView
        android:id="@+id/tw_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="Danh sách sinh viên"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvw_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>